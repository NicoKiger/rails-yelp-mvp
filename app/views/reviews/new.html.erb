<div class="navbar">
  <h2><%= @restaurant.name %> - new review</h2>
  <%= link_to "Go back to restaurant", restaurants_path, class: "nav-link" %>
</div>

<div class="form">
  <%= simple_form_for [ @restaurant, @review ] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating %>
    <%= f.submit "Submit review", class: "btn btn-primary" %>
  <% end %>
</div>

