<div class="navbar">
  <h1> <%= @restaurant.name %> | <em><%= @restaurant.category %> 🇫🇷</em> </h1>
  <%= link_to 'Leave a review', new_restaurant_review_path(@restaurant) %>
</div>


<div class="card-resto">
    <div class="container">
      <p> <%= @restaurant.address %> | <%= @restaurant.phone_number %></p>
    </div>

    <div class="container">
      <p class="review"> Reviews 📝 </p>
    </div>

    <div class="container">
      <ul>
        <% @restaurant.reviews.each do |review| %>
        <li>
          <div class="container-review">
          <span class="badge badge-primary badge-pill"> <%= review.rating %></span>
          <p><%= review.content %></p>
        </li>
        <% end %>
      </ul>
    </div>
</div>


  </div>
</div>

<div class="container">
    <%= link_to "Go back to restaurants' list", restaurants_path %>
</div>

